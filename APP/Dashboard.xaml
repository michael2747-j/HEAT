<UserControl
    x:Class="HEAT.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HEAT">

    <UserControl.Resources>
        <!-- Styles and FlatRowTemplate -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3737FF"/>
            <Setter Property="BorderBrush" Value="#3737FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ButtonScale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                             Storyboard.TargetProperty="ScaleX"
                                                             To="1.03"
                                                             Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                             Storyboard.TargetProperty="ScaleY"
                                                             To="1.03"
                                                             Duration="0:0:0.15"/>
                                            <ColorAnimation Storyboard.TargetName="RootBorder"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#5050FF"
                                                            Duration="0:0:0.15"/>
                                            <ColorAnimation Storyboard.TargetName="RootBorder"
                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#5050FF"
                                                            Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                             Storyboard.TargetProperty="ScaleX"
                                                             To="0.98"
                                                             Duration="0:0:0.08"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                             Storyboard.TargetProperty="ScaleY"
                                                             To="0.98"
                                                             Duration="0:0:0.08"/>
                                            <ColorAnimation Storyboard.TargetName="RootBorder"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#2222AA"
                                                            Duration="0:0:0.08"/>
                                            <ColorAnimation Storyboard.TargetName="RootBorder"
                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#2222AA"
                                                            Duration="0:0:0.08"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <VisualState.Setters>
                                            <Setter Target="RootBorder.Background" Value="#FFBFBFBF"/>
                                            <Setter Target="RootBorder.BorderBrush" Value="#FFBFBFBF"/>
                                            <Setter Target="RootBorder.Opacity" Value="0.6"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter Foreground="{TemplateBinding Foreground}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#3737FF"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="6,6,0,0"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="RootBorder.Background" Value="#3A3D42"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="RootBorder.Background" Value="#3737FF"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SelectedTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Background" Value="#3737FF"/>
            <Setter Property="BorderBrush" Value="#3737FF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="RowOddBackground" Color="#2A2C33"/>
        <SolidColorBrush x:Key="RowEvenBackground" Color="#22252A"/>
        <DataTemplate x:Key="FlatRowTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Col0}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col0}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="1" Text="{Binding Col1}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col1}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="2" Text="{Binding Col2}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col2}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="3" Text="{Binding Col3}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col3}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="4" Text="{Binding Col4}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col4}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="5" Text="{Binding Col5}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col5}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="6" Text="{Binding Col6}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col6}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="7" Text="{Binding Col7}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col7}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="8" Text="{Binding Col8}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col8}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="9" Text="{Binding Col9}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col9}" />
                    </ToolTipService.ToolTip>
                </TextBlock>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="MainGrid" Background="Transparent" Margin="0,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Subtabs Row -->
        <Grid x:Name="TabGrid"
              Grid.Row="0"
              Background="#181A1B"
              HorizontalAlignment="Center"
              Width="1400"
              Margin="24,0,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="TotalNetworkTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="Total Network" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="1" x:Name="LanTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="LAN Interface Configurations" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="2" x:Name="WanTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="WAN Interface Configurations" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="3" x:Name="VlanTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="vLAN Interface Configurations" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="4" x:Name="NatTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="NAT Configurations" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="5" x:Name="DhcpTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="DHCP Servers in Use" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="6" x:Name="DnsTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="DNS Servers in Use" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="7" x:Name="VpnTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="VPN Tunnels in Use" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="8" x:Name="AdTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="Active Directory / Non-Public DNS" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="9" x:Name="RoutingTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="Routing Protocols Observed" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="10" x:Name="AllTablesTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="All Tables" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
        </Grid>

        <!-- Table Area -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1400" Margin="0,0,0,0" x:Name="SingleTableGrid" Visibility="Visible">
            <Border
                BorderBrush="#3737FF"
                BorderThickness="3"
                CornerRadius="0,0,12,12"
                Background="#22252A"
                Padding="0"
                Margin="0,0,0,8"
                MinWidth="1200"
                MinHeight="400"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Table Title -->
                        <TextBlock x:Name="TableTitle"
                                   Grid.Row="0"
                                   Text="Table Title"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Foreground="White"
                                   Margin="24,16,0,0"
                                   VerticalAlignment="Center"/>

                        <!-- Main Table ListView with Header -->
                        <ListView x:Name="MainTableListView"
                                  Grid.Row="1"
                                  Margin="24,8,24,24"
                                  Background="Transparent"
                                  ItemTemplate="{StaticResource FlatRowTemplate}"
                                  SelectionMode="None">
                            <ListView.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Col0}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col0}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="1" Text="{Binding Col1}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col1}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="2" Text="{Binding Col2}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col2}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="3" Text="{Binding Col3}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col3}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="4" Text="{Binding Col4}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col4}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="5" Text="{Binding Col5}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col5}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="6" Text="{Binding Col6}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col6}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="7" Text="{Binding Col7}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col7}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="8" Text="{Binding Col8}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col8}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="9" Text="{Binding Col9}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col9}" />
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListView.HeaderTemplate>
                        </ListView>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- All Tables Area (initially hidden) -->
        <ScrollViewer x:Name="AllTablesScrollViewer" Grid.Row="1" Visibility="Collapsed" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
            <StackPanel x:Name="AllTablesStackPanel" Orientation="Vertical" Width="1400" HorizontalAlignment="Center"/>
        </ScrollViewer>

        <!-- Action Buttons Row -->
        <Grid Grid.Row="2" HorizontalAlignment="Stretch" Margin="32,16,32,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Content="Export VyOS Configuration"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="ExportVyOS_Click"
                    Margin="0,0,8,0"
                    Height="44"
                    HorizontalAlignment="Stretch"/>
            <Button Grid.Column="1"
                    Content="Delete Analysis Save State"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="DeleteSaveState_Click"
                    Margin="8,0,0,0"
                    Height="44"
                    HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</UserControl>
