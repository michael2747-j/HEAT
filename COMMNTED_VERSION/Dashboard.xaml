<!--
    File: Dashboard.xaml
    Purpose: Declares layout, styles, and templates for HEAT dashboard UI, including tab navigation, data table, and actions
    Created: June 2 2025
    Last Modified: June 5 2025
    Author: Anthony Samen
-->

<UserControl
    x:Class="HEAT.Dashboard" <!-- Sets class for code-behind to HEAT.Dashboard -->
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" <!-- Imports XAML UI elements namespace -->
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" <!-- Imports XAML language features namespace -->
    xmlns:local="using:HEAT"> <!-- Imports local project namespace for type references -->

    <UserControl.Resources> <!-- Declares reusable resources for this control -->
        <!-- Styles and FlatRowTemplate -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button"> <!-- Style for primary action buttons -->
            <Setter Property="Background" Value="#3737FF"/> <!-- Sets button background color to blue -->
            <Setter Property="BorderBrush" Value="#3737FF"/> <!-- Sets button border color to blue -->
            <Setter Property="Foreground" Value="White"/> <!-- Sets button text color to white -->
            <Setter Property="CornerRadius" Value="6"/> <!-- Sets button corner radius to 6 -->
            <Setter Property="Height" Value="44"/> <!-- Sets button height to 44 -->
            <Setter Property="FontSize" Value="16"/> <!-- Sets button font size to 16 -->
            <Setter Property="Template"> <!-- Customizes button appearance and animation -->
                <Setter.Value>
                    <ControlTemplate TargetType="Button"> <!-- Template for button visuals -->
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}" <!-- Binds border background to button background -->
                                BorderBrush="{TemplateBinding BorderBrush}" <!-- Binds border brush to button border brush -->
                                BorderThickness="{TemplateBinding BorderThickness}" <!-- Binds border thickness -->
                                CornerRadius="{TemplateBinding CornerRadius}" <!-- Binds corner radius -->
                                RenderTransformOrigin="0.5,0.5"> <!-- Sets transform origin to center -->
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ButtonScale" ScaleX="1" ScaleY="1"/> <!-- Enables scaling animation -->
                            </Border.RenderTransform>
                            <VisualStateManager.VisualStateGroups> <!-- Handles button interaction states -->
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/> <!-- Default state, no animation -->
                                    <VisualState x:Name="PointerOver"> <!-- Mouse hover state -->
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                             Storyboard.TargetProperty="ScaleX"
                                                             To="1.03"
                                                             Duration="0:0:0.15"/> <!-- Slightly enlarges button horizontally -->
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                             Storyboard.TargetProperty="ScaleY"
                                                             To="1.03"
                                                             Duration="0:0:0.15"/> <!-- Slightly enlarges button vertically -->
                                            <ColorAnimation Storyboard.TargetName="RootBorder"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#5050FF"
                                                            Duration="0:0:0.15"/> <!-- Changes background to lighter blue -->
                                            <ColorAnimation Storyboard.TargetName="RootBorder"
                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#5050FF"
                                                            Duration="0:0:0.15"/> <!-- Changes border to lighter blue -->
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed"> <!-- Mouse/touch pressed state -->
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                             Storyboard.TargetProperty="ScaleX"
                                                             To="0.98"
                                                             Duration="0:0:0.08"/> <!-- Slightly shrinks button horizontally -->
                                            <DoubleAnimation Storyboard.TargetName="ButtonScale"
                                                             Storyboard.TargetProperty="ScaleY"
                                                             To="0.98"
                                                             Duration="0:0:0.08"/> <!-- Slightly shrinks button vertically -->
                                            <ColorAnimation Storyboard.TargetName="RootBorder"
                                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#2222AA"
                                                            Duration="0:0:0.08"/> <!-- Changes background to darker blue -->
                                            <ColorAnimation Storyboard.TargetName="RootBorder"
                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#2222AA"
                                                            Duration="0:0:0.08"/> <!-- Changes border to darker blue -->
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled"> <!-- Disabled state -->
                                        <VisualState.Setters>
                                            <Setter Target="RootBorder.Background" Value="#FFBFBFBF"/> <!-- Sets gray background -->
                                            <Setter Target="RootBorder.BorderBrush" Value="#FFBFBFBF"/> <!-- Sets gray border -->
                                            <Setter Target="RootBorder.Opacity" Value="0.6"/> <!-- Reduces opacity -->
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter Foreground="{TemplateBinding Foreground}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/> <!-- Centers button content -->
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TabButtonStyle" TargetType="Button"> <!-- Style for tab navigation buttons -->
            <Setter Property="Background" Value="Transparent"/> <!-- Transparent background -->
            <Setter Property="BorderBrush" Value="#3737FF"/> <!-- Blue border -->
            <Setter Property="BorderThickness" Value="3"/> <!-- Border thickness of 3 -->
            <Setter Property="Foreground" Value="White"/> <!-- White text -->
            <Setter Property="CornerRadius" Value="6,6,0,0"/> <!-- Rounded top corners -->
            <Setter Property="Height" Value="48"/> <!-- Height of 48 -->
            <Setter Property="HorizontalAlignment" Value="Stretch"/> <!-- Stretches horizontally -->
            <Setter Property="VerticalAlignment" Value="Stretch"/> <!-- Stretches vertically -->
            <Setter Property="Template"> <!-- Customizes tab button appearance -->
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/> <!-- Default state -->
                                    <VisualState x:Name="PointerOver"> <!-- Hover state -->
                                        <VisualState.Setters>
                                            <Setter Target="RootBorder.Background" Value="#3A3D42"/> <!-- Sets darker background on hover -->
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed"> <!-- Pressed state -->
                                        <VisualState.Setters>
                                            <Setter Target="RootBorder.Background" Value="#3737FF"/> <!-- Sets blue background on press -->
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/> <!-- Centers tab content -->
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SelectedTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}"> <!-- Style for selected tab, inherits from tab style -->
            <Setter Property="Background" Value="#3737FF"/> <!-- Blue background for selected tab -->
            <Setter Property="BorderBrush" Value="#3737FF"/> <!-- Blue border for selected tab -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="RootBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/> <!-- Centers selected tab content -->
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="RowOddBackground" Color="#2A2C33"/> <!-- Background brush for odd table rows -->
        <SolidColorBrush x:Key="RowEvenBackground" Color="#22252A"/> <!-- Background brush for even table rows -->
        <DataTemplate x:Key="FlatRowTemplate"> <!-- Template for displaying data rows in table -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/> <!-- Column 0 width -->
                    <ColumnDefinition Width="160"/> <!-- Column 1 width -->
                    <ColumnDefinition Width="160"/> <!-- Column 2 width -->
                    <ColumnDefinition Width="160"/> <!-- Column 3 width -->
                    <ColumnDefinition Width="160"/> <!-- Column 4 width -->
                    <ColumnDefinition Width="160"/> <!-- Column 5 width -->
                    <ColumnDefinition Width="160"/> <!-- Column 6 width -->
                    <ColumnDefinition Width="160"/> <!-- Column 7 width -->
                    <ColumnDefinition Width="160"/> <!-- Column 8 width -->
                    <ColumnDefinition Width="160"/> <!-- Column 9 width -->
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Col0}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col0}" /> <!-- Tooltip for column 0 -->
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="1" Text="{Binding Col1}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col1}" /> <!-- Tooltip for column 1 -->
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="2" Text="{Binding Col2}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col2}" /> <!-- Tooltip for column 2 -->
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="3" Text="{Binding Col3}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col3}" /> <!-- Tooltip for column 3 -->
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="4" Text="{Binding Col4}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col4}" /> <!-- Tooltip for column 4 -->
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="5" Text="{Binding Col5}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col5}" /> <!-- Tooltip for column 5 -->
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="6" Text="{Binding Col6}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col6}" /> <!-- Tooltip for column 6 -->
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="7" Text="{Binding Col7}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col7}" /> <!-- Tooltip for column 7 -->
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="8" Text="{Binding Col8}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col8}" /> <!-- Tooltip for column 8 -->
                    </ToolTipService.ToolTip>
                </TextBlock>
                <TextBlock Grid.Column="9" Text="{Binding Col9}" Foreground="White" Margin="12,8" TextTrimming="CharacterEllipsis" VerticalAlignment="Center">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="{Binding Col9}" /> <!-- Tooltip for column 9 -->
                    </ToolTipService.ToolTip>
                </TextBlock>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="MainGrid" Background="Transparent" Margin="0,8"> <!-- Main layout grid for dashboard -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Row for tabs -->
            <RowDefinition Height="*"/> <!-- Row for table or all tables -->
            <RowDefinition Height="Auto"/> <!-- Row for action buttons -->
        </Grid.RowDefinitions>

        <!-- Subtabs Row -->
        <Grid x:Name="TabGrid"
              Grid.Row="0"
              Background="#181A1B"
              HorizontalAlignment="Center"
              Width="1400"
              Margin="24,0,24,0"> <!-- Grid for tab navigation -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /> <!-- Column 0 -->
                <ColumnDefinition Width="*" /> <!-- Column 1 -->
                <ColumnDefinition Width="*" /> <!-- Column 2 -->
                <ColumnDefinition Width="*" /> <!-- Column 3 -->
                <ColumnDefinition Width="*" /> <!-- Column 4 -->
                <ColumnDefinition Width="*" /> <!-- Column 5 -->
                <ColumnDefinition Width="*" /> <!-- Column 6 -->
                <ColumnDefinition Width="*" /> <!-- Column 7 -->
                <ColumnDefinition Width="*" /> <!-- Column 8 -->
                <ColumnDefinition Width="*" /> <!-- Column 9 -->
                <ColumnDefinition Width="*" /> <!-- Column 10 -->
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="TotalNetworkTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="Total Network" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="1" x:Name="LanTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="LAN Interface Configurations" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="2" x:Name="WanTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="WAN Interface Configurations" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="3" x:Name="VlanTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="vLAN Interface Configurations" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="4" x:Name="NatTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="NAT Configurations" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="5" x:Name="DhcpTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="DHCP Servers in Use" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="6" x:Name="DnsTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="DNS Servers in Use" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="7" x:Name="VpnTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="VPN Tunnels in Use" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="8" x:Name="AdTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="Active Directory / Non-Public DNS" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="9" x:Name="RoutingTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="Routing Protocols Observed" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Column="10" x:Name="AllTablesTab" Style="{StaticResource TabButtonStyle}" Click="Subtab_Click">
                <TextBlock Text="All Tables" TextWrapping="Wrap" TextAlignment="Center" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
        </Grid>

        <!-- Table Area -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1400" Margin="0,0,0,0" x:Name="SingleTableGrid" Visibility="Visible">
            <Border
                BorderBrush="#3737FF"
                BorderThickness="3"
                CornerRadius="0,0,12,12"
                Background="#22252A"
                Padding="0"
                Margin="0,0,0,8"
                MinWidth="1200"
                MinHeight="400"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/> <!-- Row for table title -->
                            <RowDefinition Height="*"/> <!-- Row for table -->
                        </Grid.RowDefinitions>

                        <!-- Table Title -->
                        <TextBlock x:Name="TableTitle"
                                   Grid.Row="0"
                                   Text="Table Title"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   Foreground="White"
                                   Margin="24,16,0,0"
                                   VerticalAlignment="Center"/>

                        <!-- Main Table ListView with Header -->
                        <ListView x:Name="MainTableListView"
                                  Grid.Row="1"
                                  Margin="24,8,24,24"
                                  Background="Transparent"
                                  ItemTemplate="{StaticResource FlatRowTemplate}"
                                  SelectionMode="None">
                            <ListView.HeaderTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                            <ColumnDefinition Width="160"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Col0}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col0}" /> <!-- Tooltip for header column 0 -->
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="1" Text="{Binding Col1}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col1}" /> <!-- Tooltip for header column 1 -->
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="2" Text="{Binding Col2}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col2}" /> <!-- Tooltip for header column 2 -->
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="3" Text="{Binding Col3}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col3}" /> <!-- Tooltip for header column 3 -->
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="4" Text="{Binding Col4}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col4}" /> <!-- Tooltip for header column 4 -->
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="5" Text="{Binding Col5}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col5}" /> <!-- Tooltip for header column 5 -->
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="6" Text="{Binding Col6}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col6}" /> <!-- Tooltip for header column 6 -->
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="7" Text="{Binding Col7}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col7}" /> <!-- Tooltip for header column 7 -->
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="8" Text="{Binding Col8}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col8}" /> <!-- Tooltip for header column 8 -->
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                        <TextBlock Grid.Column="9" Text="{Binding Col9}" Foreground="White" FontWeight="Bold" Margin="12,8" VerticalAlignment="Center">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Col9}" /> <!-- Tooltip for header column 9 -->
                                            </ToolTipService.ToolTip>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListView.HeaderTemplate>
                        </ListView>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- All Tables Area (initially hidden) -->
        <ScrollViewer x:Name="AllTablesScrollViewer" Grid.Row="1" Visibility="Collapsed" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
            <StackPanel x:Name="AllTablesStackPanel" Orientation="Vertical" Width="1400" HorizontalAlignment="Center"/>
        </ScrollViewer>

        <!-- Action Buttons Row -->
        <Grid Grid.Row="2" HorizontalAlignment="Stretch" Margin="32,16,32,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" /> <!-- Column 0 for left button -->
                <ColumnDefinition Width="*" /> <!-- Column 1 for right button -->
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Content="Export VyOS Configuration"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="ExportVyOS_Click"
                    Margin="0,0,8,0"
                    Height="44"
                    HorizontalAlignment="Stretch"/>
            <Button Grid.Column="1"
                    Content="Delete Analysis Save State"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="DeleteSaveState_Click"
                    Margin="8,0,0,0"
                    Height="44"
                    HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</UserControl>
